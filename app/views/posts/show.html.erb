<p id="notice"><%= notice %></p>

<div class='container'>
	<p>
	  <strong>Heading:</strong>
	  <%= @post.heading %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>

	<p>
	  <strong>Price:</strong>
	  <%= number_to_currency(@post.price, precision: 0) %>
	</p>

	<p>
	  <strong>Warranty:</strong>
	  <%= @post.warranty %>
	</p>

	<p>
	  <strong>Brand:</strong>
	  <%= @post.brand %>
	</p>
	
	<p>
	  <strong>Listing Type:</strong>
	  <%= @post.listing_type %>
	</p>
	
	<p>
	  <strong>Part Number:</strong>
	  <%= @post.manufacturer_part_number %>
	</p>
	
	<p>
	  <strong>Origin:</strong>
	  <%= @post.origin %>
	</p>

	<p>
	  <strong>Timestamp:</strong>
	  <%= "#{time_ago_in_words(Time.at(@post.timestamp.to_i))} ago" %>
	</p>
	
  <% @images.each do |image| %>
    <%= image_tag image.url, class: "thumbnail" %>
  <% end %>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
</div>